{
  "name": "chorus",
  "version": "0.1.0",
  "description": "A harmony-based music composition toolkit with MIDI I/O",
  "author": "Adam Murray <adam@compusition.com>",
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adamjmurray/chorus.js"
  },
  "keywords": [
    "music",
    "midi",
    "harmony",
    "composition",
    "scales",
    "chords",
    "rhythm"
  ],
  "main": "./src/index.js",
  "scripts": {
    "test": "npm run lint && npm run mocha",
    "lint": "node_modules/.bin/eslint --config etc/.eslintrc.js src test",
    "mocha": "node_modules/.bin/mocha test/*.js test/**/*.js",
    "cover": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- test/*.js test/**/*.js",
    "docs": "node_modules/.bin/jsdoc src --configure etc/jsdoc.json --recurse --destination docs --readme etc/docs-home.md",
    "docs-watch": "nodemon -e js,md -x npm run doc"
  },
  "optionalDependencies": {
    "midi": "^0.9.5"
  },
  "devDependencies": {
    "eslint": "^3.9.1",
    "istanbul": "^1.1.0-alpha.1",
    "jsdoc": "^3.4.2",
    "mocha": "^3.1.2"
  }
}
