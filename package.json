{
  "name": "chorus",
  "version": "0.6.1",
  "description": "A harmony-based music composition toolkit with MIDI I/O",
  "author": "Adam Murray <adam@compusition.com>",
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adamjmurray/chorus.js"
  },
  "main": "./src/index.js",
  "scripts": {
    "lint": "node_modules/.bin/eslint --config etc/.eslintrc.js src test",
    "mocha": "node_modules/.bin/mocha test/*.js test/**/*.js",
    "test": "npm run lint && npm run mocha",
    "cover": "node_modules/.bin/nyc --reporter=html --reporter=lcov npm run mocha",
    "coveralls": "npm run cover && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "ci": "npm run lint && npm run coveralls",
    "docs": "node_modules/.bin/jsdoc --configure etc/jsdoc.json && cat etc/jsdoc-additional-styles.css >> docs/styles/jsdoc-default.css",
    "docs-watch": "nodemon -w README.md -w etc -w src -e js,json,css,md -x npm run docs"
  },
  "optionalDependencies": {
    "midi": "^0.9.5"
  },
  "devDependencies": {
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-plugin-mocha-no-only": "^0.0.5",
    "jsdoc": "^3.4.2",
    "mocha": "^3.4.1",
    "nyc": "^10.3.2",
    "proxyquire": "^1.8.0"
  },
  "keywords": [
    "music",
    "song",
    "midi",
    "harmony",
    "harmonies",
    "harmonic",
    "compose",
    "composing",
    "composition",
    "scale",
    "scales",
    "chord",
    "chords",
    "progression",
    "progressions",
    "rhythm",
    "rhtyhms",
    "multitrack",
    "multi-track",
    "microtonal"
  ]
}
