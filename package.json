{
  "name": "chorus",
  "version": "0.0.2",
  "description": "A harmony-based music composition toolkit with MIDI I/O",
  "author": "Adam Murray <adam@compusition.com>",
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adamjmurray/npm-chorus"
  },
  "keywords": [
    "music",
    "midi",
    "harmony",
    "composition",
    "scales",
    "chords",
    "rhythm"
  ],
  "main": "./src/index.js",
  "scripts": {
    "test": "npm run lint && npm run mocha",
    "lint": "node_modules/.bin/eslint src test",
    "mocha": "node_modules/.bin/mocha test/**/*.js",
    "cover": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- test/**/*.js",
    "doc": "node_modules/.bin/jsdoc src --configure ./jsdoc.json --recurse --destination doc --readme docs-home.md",
    "doc-watch": "watch 'npm run doc' src/ --wait=1"
  },
  "optionalDependencies": {
    "midi": "^0.9.5"
  },
  "devDependencies": {
    "eslint": "^3.8.1",
    "istanbul": "^1.1.0-alpha.1",
    "jsdoc": "^3.4.2",
    "mocha": "^3.1.2"
  }
}
